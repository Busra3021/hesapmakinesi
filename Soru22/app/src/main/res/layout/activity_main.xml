<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="6"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_6"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:onClick="numbersClick"
        android:tag="6"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/btn_5"
        app:layout_constraintTop_toBottomOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:onClick="numbersClick"
        android:tag="1"
        android:text="@string/_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:onClick="numbersClick"
        android:tag="2"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/btn_1"
        app:layout_constraintTop_toTopOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:onClick="numbersClick"
        android:tag="3"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        app:layout_constraintTop_toTopOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_c"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:onClick="btn_c"
        android:text="C"
        android:textColorHighlight="@color/white"
        android:textColorLink="#3F51B5"
        app:layout_constraintStart_toEndOf="@+id/btn_3"
        app:layout_constraintTop_toTopOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:onClick="numbersClick"
        android:tag="4"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:onClick="numbersClick"
        android:tag="5"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/btn_4"
        app:layout_constraintTop_toTopOf="@+id/btn_4" />

    <Button
        android:id="@+id/btn_esittir"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:onClick="btn_esittir"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/btn_6"
        app:layout_constraintTop_toTopOf="@+id/btn_4" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:onClick="numbersClick"
        android:tag="7"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_4" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:onClick="numbersClick"
        android:tag="9"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/btn_8"
        app:layout_constraintTop_toBottomOf="@+id/btn_4" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:onClick="numbersClick"
        android:tag="0"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/btn_9"
        app:layout_constraintTop_toTopOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:onClick="numbersClick"
        android:tag="8"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_4" />

    <Button
        android:id="@+id/btn_topla"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:onClick="btn_topla"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_bolme"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:onClick="btn_bolme"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/btn_carpma"
        app:layout_constraintTop_toBottomOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_carpma"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:onClick="btn_carpma"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/btn_eksi"
        app:layout_constraintTop_toBottomOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_eksi"
        android:layout_width="97dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:onClick="btn_eksi"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/btn_topla"
        app:layout_constraintTop_toBottomOf="@+id/btn_7" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="414dp"
        android:layout_height="74dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="7dp" />

</androidx.constraintlayout.widget.ConstraintLayout>